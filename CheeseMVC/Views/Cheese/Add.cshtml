@model CheeseMVC.ViewModels.AddCheeseViewModel
@{
    //Layout = null;
    ViewData["Title"] = "Add Cheese";

}
    <div class="container">
        <h1>Add Cheese</h1>
        <div class="row">
            <form asp-controller="Cheese" asp-action="Add" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="text-danger">@*@Model.SaveChangesError*@</div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input class="form-control .mr-sm-2" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control .mr-sm-2" asp-for="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-for="CategoryID" asp-items="Model.cheeseCategory"></select>
                </div>
                <input type="submit" name="submit" value="Submit" class=" btn btn-primary m-2" />
            </form>
        </div>
    </div>

