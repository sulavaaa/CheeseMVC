@model CheeseMVC.ViewModels.EditCheeseViewModel
@{
    //Layout = null;
    ViewData["Title"] = "Edit Cheese";

}
    <div class="container">
        <h1>Edit Cheese</h1>
        <div class="row">
            <form asp-controller="Cheese" asp-action="Edit" method="post">
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-group">

                    <label asp-for="Name"></label>
                    <input type="hidden" asp-for="ID" />
                    <input class="form-control .mr-sm-2" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input class="form-control .mr-sm-2" asp-for="Description" />
                    <span asp-validation-for="Description"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <select asp-for="Category" asp-items="Model.cheeseCategory">
                    </select>
                </div>
                <input type="submit" name="submit" value="Edit" class=" btn btn-primary m-2" />
            </form>
        </div>
    </div>
